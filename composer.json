{
    "name": "uuf6429/elder-brother",
    "description": "Set up and manage contribution policies for your PHP-based projects.",
    "homepage": "https://github.com/uuf6429/elder-brother",
    "type": "application",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Sciberras",
            "email": "christian@sciberras.me"
        }
    ],
    "support": {
        "issues": "https://github.com/uuf6429/elder-brother/issues"
    },
    "require": {
        "php": "^5.5.0 || ^7.0",
        "psr/log": "^1.0",
        "symfony/console": "^3.1",
        "phpmyadmin/sql-parser": "^3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "friendsofphp/php-cs-fixer": "^1.11"
    },
    "autoload": {
        "psr-4": {
            "uuf6429\\ElderBrother\\": "src/ElderBrother"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "uuf6429\\ElderBrother\\": "test/ElderBrother"
        }
    },
    "suggest": {
        "friendsofphp/php-cs-fixer": "Needed for PhpCsFixer action"
    },
    "bin": ["elder-brother"],
    "scripts": {
        "post-install-cmd": "php elder-brother install",
        "post-update-cmd": "php elder-brother install"
    }
}
